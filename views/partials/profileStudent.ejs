<div class="container main emp-profile">
  <div class="row">
    <div class="col-md-4">
      <div class="profile-img">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt=""/>
      </div>
    </div>
    <div class="col-md-6 align-items-end">
      <div class="profile-head">
        <h5>Murid</h5>
        <h3><%= dataProfile.name %></h3>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="dataMpu-tab" data-toggle="tab" href="#dataMpu" role="tab" aria-controls="profile" aria-selected="false">Mpu Profile</a>
            </li>
        </ul>
      </div>
    </div>
    <div class="col-md-2">
      <% if (session) { %>
        <% if(session.userId == dataProfile.id) { %>
          <a class="btn btn-primary" href='/student/<%= dataProfile.id %>/edit'>Edit Profile</a>
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
      <div class="tab-content profile-tab" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <% if (action == 'edit') { %>
              <%- include('./editData.ejs') %>
            <% } else if (action == 'showData') { %>
              <form action='' method="POST">
              <%- include('./showData.ejs')%>
              </form>
            <% } %>
          </div>
          <div class="tab-pane fade" id="dataMpu" role="tabpanel" aria-labelledby="dataMpu-tab">
            <% if (dataMpu) { %>
              <% Object.keys(dataMpu).forEach((key) => { %>
                <div class="row">
                  <div class="col-md-4">
                      <label><%= key %></label> <!-- instructor.key -->
                  </div>
                  <div class="col-md-8">
                      <p><%= dataMpu[key] %></p> <!-- instructor.username -->
                  </div>
                </div>
              <% }) %>
            <% } else { %> 
              <p>This account have no Mpu</p>
            <% } %>
          </div>
        </div>
    </div>
  </div>          
</div>